{
  "name": "ebrowser",
  "version": "1.0.11",
  "description": "electron web browser",
  "main": "webview.js",
  "scripts": {
    "release": "electron-builder"
  },
  "files": [
    "webview.js",
    "index.html",
    "package.json",
    "README.md"
  ],
  "author": "Richard H. Cao",
  "keywords": ["browser","minimal","suckless","command line","vim key map","user scripts"],
  "build": {
    "appId": "torapp.eweb",
    "publish": "github",
    "directories": {
      "output": "release"
    },
    "dmg": {
      "contents": [
        { "x": 110, "y": 150 },
        { "x": 240, "y": 150, "type": "link", "path": "/Applications" }
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always"
    }
  },
  "dependencies": {
    "electron":""
  },
  "devDependencies": {
    "electron-builder": ""
  }
}
